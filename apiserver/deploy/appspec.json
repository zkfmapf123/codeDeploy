{
  "version": 0.0,
  "Resources": [
    {
      "TargetService": {
        "Type": "AWS::ECS::Service",
        "Properties": {
          "TaskDefinition": "arn:aws:ecs:ap-northeast-2:583142839179:task-definition/todolist-family:12",
          "LoadBalancerInfo": {
            "ContainerName": "healthcheck-container-poc",
            "ContainerPort": 3000
          },
          "PlatformVersion": "LATEST"
        }
      }
    }
  ],
  "Hooks": [
    {
      "BeforeInstall": "readyDeployLambda"
    },
    {
      "AfterInstall": "beforeTrafficLambda"
    },
    {
      "AfterAllowTestTraffic": "ProgressTrafficLambda"
    },
    {
      "BeforeAllowTraffic": "completeTrafficBeforeServingProductLambda"
    },
    {
      "AfterAllowTraffic": "completeDeployProductLambda"
    }
  ]
}
